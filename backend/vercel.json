{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.js",

      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "max-age=0, s-maxage=86400, stale-while-revalidate"
      }
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }]
}
